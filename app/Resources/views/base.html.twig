<!DOCTYPE html>
<html lang="fr">
        <head>
            <meta charset="UTF-8"/>
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>
                {% block title %}ITPC West Africa{% endblock %}
            </title>
            {% block meta %}
            {% endblock %}
            <link rel="icon" type="image/x-icon" href="{{ absolute_url(asset('favicon.ico')) }}"/>

            {% block stylesheets %}
                {% stylesheets
                    'frontend/css/font-awesome.min.css'
                    'frontend/css/flaticon.css'
                    'frontend/css/bootstrap.min.css'
                    'frontend/css/animate.css'
                    'frontend/css/owl.carousel.css'
                    'frontend/css/owl.theme.css'
                    'frontend/css/slick.css'
                    'frontend/css/slick-theme.css'
                    'frontend/css/owl.transitions.css'
                    'frontend/css/jquery.fancybox.css'
                    'frontend/css/bootstrap-select.css'
                    'frontend/css/style.css'
                    filter='cssrewrite' output='backoffice/css/itpcwa.css'
                %}
                    <link rel="stylesheet" href="{{ absolute_url(asset_url)}}" />
                {% endstylesheets %}

                <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media
                queries -->
                <!--[if lt IE 9]> <script
                src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script> <script
                src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]-->
                <script src='https://www.google.com/recaptcha/api.js'></script>
            {% endblock %}
            <!-- Global site tag (gtag.js) - Google Analytics -->
            <script async src="https://www.googletagmanager.com/gtag/js?id=UA-104978409-5"></script>
            <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-104978409-5');
            </script>

        </head>
        <body>

            <div class="page-wrapper">

                <div class="preloader"> </div>

                <header id="header" class="site-header header-style-1">
                    <div class="topbar">
                        <div class="container">
                            <div class="row">
                                <div class="col col-sm-6">
                                    <ul class="contact-info">
                                        <li><i class="fa fa-phone-square"></i> Phone: +225 22 52 99 89</li>
                                    </ul>
                                </div>
                                <div class="col col-sm-6">
                                    {% block langue %}
                                    <div class="language">
                                        <span><i class="fa fa-globe"></i> Lang:</span>
                                        <a href="{{ absolute_url(path('english_index'))}}" title="Anglais"><img src="{{ absolute_url(asset('frontend/images/drapeau-en.png')) }}" width="20"></a>
                                        <a href="{{ absolute_url(path('francais_index')) }}" title="Français"><img src="{{ absolute_url(asset('frontend/images/drapeau-fr.png')) }}" width="20"></a>
                                    </div>
                                    {% endblock %}
                                </div>
                            </div>
                        </div> <!-- end container -->
                    </div> <!-- end topbar -->
                    <nav class="navigation navbar navbar-default">
                        <div class="container">
                            <div class="navbar-header">
                                <button type="button" class="open-btn">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a href="{{ absolute_url(path('homepage')) }}" class="navbar-brand"><img src="{{ absolute_url(asset('frontend/images/logo-blanc.png')) }}" alt></a>
                            </div>
                            <div id="navbar" class="navbar-collapse collapse navbar-right navigation-holder">
                                <button class="close-navbar"><i class="fa fa-close"></i></button>
                                <ul class="nav navbar-nav">
                                    <li><a href="{{ absolute_url(path('francais_index')) }}">Accueil</a></li>
                                    <li><a href="{{ absolute_url(path('francais_actualites'))}}">Actualités</a></li>
                                    <li class="menu-item-has-children">
                                        <a href="#">Présentation</a>
                                        <ul class="sub-menu">
                                            {{ render(url('francais_presentation'))}}
                                        </ul>
                                    </li>
                                    <li class="menu-item-has-children">
                                        <a href="#">Campagnes</a>
                                        <ul class="sub-menu">
                                            {{ render(url('francais_campagne'))}}
                                        </ul>
                                    </li>
                                    <li><a href="{{ absolute_url(path('francais_ressources'))}}">Ressources</a></li>
                                    <li><a href="{{ absolute_url(path('francais_galerie'))}}">Galerie</a></li>
                                    <li><a href="{{ absolute_url(path('francais_contact'))}}">Contacts</a></li>
                                </ul>
                            </div><!-- end of nav-collapse -->
                            <div class="search-social">
                                <div class="header-search-area">
                                    <div class="header-search-form">
                                        <form class="form">
                                            <div>
                                                <input type="text" class="form-control" placeholder="Faites votre recherche">
                                            </div>
                                            <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                                        </form>
                                    </div>
                                    <div>
                                        <button class="btn open-btn"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div><!-- end of container -->
                    </nav>
                </header>

                 {% block body %}{% endblock %}

                <footer class="site-footer">
                    <div class="upper-footer">
                        <div class="container">
                            <div class="row">
                                <div class="col col-md-4 col-sm-6">
                                    <div class="widget about-widget">
                                        <div class="footer-logo"><img src="{{ absolute_url(asset('frontend/images/logo-footer.png')) }}" alt width=""></div>
                                        {{ render(url('francais_presentation_footer'))}}
                                        <ul class="contact-info">
                                            <li><i class="fa fa-phone"></i> +225 22 52 99 89  </li>
                                            <li><i class="fa fa-envelope"></i> infos@itpcwa.org</li>
                                            <li><i class="fa fa-home"></i> Cocody Angre 7è Tranche vallée, Abidjan-Côte d'Ivoire</li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="col col-md-2 col-sm-6">
                                    <div class="widget support-widget">
                                        <h3>Rubriques</h3>
                                        <ul>
                                            <li><a href="{{ absolute_url(path('francais_actualites'))}}">Actualités</a></li>
                                            {{ render(url('francais_campagne'))}}
                                            <li><a href="{{ absolute_url(path('francais_ressources'))}}">Ressources</a></li>
                                            <li><a href="{{ absolute_url(path('francais_galerie'))}}">Galerie</a></li>
                                            <li><a href="#">Contact</a></li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="col col-md-3 col-sm-6">
                                    <div class="widget support-widget">
                                        <h3>Présentation</h3>
                                        <ul>
                                            {{ render(url('francais_presentation'))}}
                                    </div>
                                </div>

                                <div class="col col-md-3 col-sm-6">
                                    <div class="widget twitter-feed-widget">
                                        <a class="twitter-timeline" data-height="400" data-dnt="true" data-link-color="#E81C4F" href="https://twitter.com/ITPCglobal/likes?ref_src=twsrc%5Etfw">Tweets Liked by @ITPCglobal</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end upper-footer -->
                    <div class="copyright-info">
                        <div class="container">
                            <div class="row">
                                <div class="col col-xs-6">
                                    <div class="copyright-area">
                                        <p>2018 &copy; ITPC West Africa </p>
                                    </div>
                                </div>
                                <div class="col col-xs-6">
                                    <div class="footer-social">
                                        <span>Suivez-nous: </span>
                                        <ul class="social-links">
                                            <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
                                            <li><a href="#"><i class="fa fa-twitter-square"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>        
            </div>            
           
            
            {% block javascripts %}     
                {% javascripts
                    'frontend/js/jquery.min.js'
                    'frontend/js/bootstrap.min.js'
                    'frontend/js/jquery-plugin-collection.js'
                    'frontend/js/script.js'
                    output='assets/js/itpcwa.js'
                %}
                <script src="{{ absolute_url(asset_url)}}"></script>
                {% endjavascripts %}
            
            <script>(function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.4";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
            </script>
            {% endblock %}
        </body>
</html>