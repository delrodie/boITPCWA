{% extends 'backend_layout.html.twig' %}

{% block title %}Registration of sliders{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-title">
            <h4 class="mb-0">
                Sliders management
                <small> </small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Home</a></li>
                <li class="breadcrumb-item active">Registration of sliders</li>
            </ol>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_frslider_index') }}" class="btn  btn-light"><i class="fa fa-list"></i> Sliders list</a>
                </div>
                <br>
                <div class="col-md-12">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Registration of sliders
                            </div>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'right-text-label-form', 'id':'signupForm'}}) }}

                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Title</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.titre) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Description</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.description) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="tags">Picture</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.imageFile) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-5 col-sm-offset-4">.</div>
                                <label class="custom-control custom-checkbox">
                                    {{ form_widget(form.statut) }}
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Enabled</span>
                                </label>
                            </div>
                            {{ form_rest(form) }}
                            <div class="form-group row">
                                <div class="col-sm-5 ml-auto">
                                    <button type="reset" class="btn btn-outline-primary" name="signup">Cancel</button>
                                    <button type="submit" class="btn btn-primary" name="signup">Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

