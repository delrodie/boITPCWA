{% extends 'base.html.twig' %}

{% block title %}La galerie photo{% endblock %}

{% block body %}

    <section class="page-title">
        <div class="container">
            <div class="row">
                <div class="col col-xs-12">
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ absolute_url(path('homepage'))}}">Accueil</a>
                        </li>
                        <li>Galerie</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="testimonials-pg-content section-padding">
            <div class="container">
                <div class="row">
                    <div class="col col-lg-10 col-lg-offset-1">
                        <div class="testimonials-grids">
                            {% for album in albums %}
                              <div class="grid">
                                <div class="client-pic">
                                    <a href="#"><img src="{{ asset('uploads/fr/actualites/'~ album.article.imageName) | imagine_filter('galerie') }}" alt></a>
                                </div>
                                <div class="details">
                                    <a href="{{ absolute_url(path('francais_galerie_photo',{'slug': album.article.slug}))}}"><h4>
                                        {{ album.article.titre }}
                                    </h4></a>
                                    <span class="client-post">{{ album.article.publieLe|date('d M Y')}}</span>
                                </div>
                            </div>  
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div> <!-- end container -->
        </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ absolute_url(asset('frontend/js/pagination.js')) }}"></script>
    <script>
        (function (d, s, id) {
            var js,
                fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) 
                return;
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.4";
            fjs
                .parentNode
                .insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <script>
        $(document).ready(function() {
            pagination(6,'.grid','ul.pg-pagination',2);
        });
    </script>
{% endblock %}