{% extends 'base.html.twig' %}

{% block title %}Liste des jobs
{% endblock %}

{% block body %}

    <section class="page-title">
        <div class="container">
            <div class="row">
                <div class="col col-xs-12">
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ absolute_url(path('homepage'))}}">Accueil</a>
                        </li>
                        <li>Liste des jobs</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="blog-with-sidebar-section blog-single-content section-padding">
        <div class="container">
            <div class="row">
                <div class="news-grids col col-lg-8 col-md-8">

                    <div class="comments">
                        {% for job in jobs %}
                           <div class="row">
                               <fieldset>
                                   <div class="col col-md-12">
                                       <h3><a href="{{ absolute_url(path('francais_jobs_show', {'slug': job.slug}))}}">{{ job.titre }}</a></h3>
                                       <p>{{ job.resume|raw }}</p> <br>
                                       <p>
                                           <b>type de contrat</b>: {{ job.contrat }} <br>
                                           <strong>Localit√©</strong>: {{ job.localite }} <br>
                                           <strong>date de fermeture</strong>: {{ job.datefin }}
                                       </p>
                                   </div>
                               </fieldset>
                           </div>
                            <hr>
                        {% endfor %}
                    </div>
                    <!-- end comments -->
                </div>
                <!-- end blog-content -->

                <div class="blog-sidebar col col-lg-offset-1 col-lg-3 col-md-4 col-sm-5">
                    {{ render(url('francais_menu_droit'))}}
                </div>
            </div>
        </div>
        <!-- end container -->
    </section>

{% endblock %}
