{% extends 'backend_layout.html.twig' %}

{% block title %}Enregistrement des actualités{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-title">
            <h4 class="mb-0">
                Gestion des actualités
                <small> </small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">Enregistrement des actualités</li>
            </ol>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_frarticle_index') }}" class="btn  btn-light"><i class="fa fa-list"></i> Liste des actualités</a>
                </div>
                <br>
                <div class="col-md-12">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Enregistrement des actualités
                            </div>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'right-text-label-form', 'id':'signupForm'}}) }}
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="titre">Titre</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.titre) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="Contenu">Contenu</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.contenu) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="tags">Mots clés</label>
                                <div class="col-sm-8 tags" style="color: #666666">
                                    {{ form_widget(form.tags) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="tags">Photo d'illustration</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.imageFile) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-5 col-sm-offset-4">.</div>
                                <label class="custom-control custom-checkbox">
                                    {{ form_widget(form.statut) }}
                                    <span class="custom-control-indicator"></span>
                                    <span class="custom-control-description">Statut</span>
                                </label>
                            </div>
                            {{ form_rest(form) }}
                            <div class="form-group row">
                                <div class="col-sm-5 ml-auto">
                                    <button class="btn btn-primary" name="signup">Enregistrement</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('backend/vendor/select2/css/select2.css') }}" rel="stylesheet">
    <link href="{{ asset('backend/vendor/summernote/summernote-bs4.css') }}" rel="stylesheet">
    <link href="{{ asset('backend/vendor/tagsinput/js/bootstrap-tagsinput.css')}}" rel="stylesheet">
    <style>

        .bootstrap-tagsinput .tag {
            margin-right: 2px;
            color: #666666;
        }
    </style>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('backend/vendor/select2/js/select2.min.js') }}"></script>
    <script src="{{ asset('backend/vendor/summernote/summernote-bs4.min.js') }}"></script>
    <script src="{{ asset('backend/vendor/tagsinput/js/bootstrap-tagsinput.js') }}" type="text/javascript"></script>
    <script>
        $(function () {
            $("#appbundle_article_rubrique").select2();
            $("tag-input").tagsinput();
        })
    </script>
    <script>
        $(document).ready(function() {
            $('#appbundle_frarticle_contenu').summernote({
                height: 300,                 // set editor height
                minHeight: null,             // set minimum height of editor
                maxHeight: null,             // set maximum height of editor
                focus: true                  // set focus to editable area after initializing summernote
            });
        });
    </script>
{% endblock %}