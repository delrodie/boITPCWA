{% extends 'backend_layout.html.twig' %}

{% block title %}Modification des photos{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="page-title">
            <h4 class="mb-0">
                Gestion des photos
                <small> </small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">Modification des photos</li>
            </ol>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_frressource_index') }}" class="btn  btn-light"><i class="fa fa-list"></i> Retour à l'actualité</a>
                </div>
                <br>
                <div class="col-md-12">
                    <div class="card card-shadow mb-4">
                        <div class="card-header">
                            <div class="card-title">
                                Modification des photos
                            </div>
                        </div>
                        <div class="card-body">
                            {{ form_start(edit_form, {'attr': {'class': 'right-text-label-form', 'id':'signupForm'}}) }}
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="Partenaire">Titre</label>
                                <div class="col-sm-8 select2-container">
                                    {{ form_widget(edit_form.titre) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="Partenaire">Description</label>
                                <div class="col-sm-8 select2-container">
                                    {{ form_widget(edit_form.description) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="tags">Mots clés</label>
                                <div class="col-sm-8 tags" style="color: #666666">
                                    {{ form_widget(edit_form.tags) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="tags">Photo d'illustration</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.imageFile) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label" for="tags">Telecharger document</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.brochureFile) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-5 col-sm-offset-0">.</div>
                                <label class="custom-control custom-checkbox">
                                    {{ form_widget(edit_form.statut) }}
                                    <span class="custom-control-indicator"></span>
                                    {% if (frRessource.statut) %}
                                        <span class="custom-control-description">Désactivé</span>
                                    {% else %}
                                        <span class="custom-control-description">Activé</span>
                                    {% endif %}
                                </label>
                            </div>
                            {{ form_rest(edit_form) }}
                            <div class="form-group row">
                                <div class="col-sm-5 ml-auto">
                                    <a href="{{ path('backend_frressource_index') }}" class="btn btn-outline-primary">Annuler</a>
                                    <button class="btn btn-primary" name="signup">Modifier</button>
                                </div>
                            </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('backend/vendor/tagsinput/js/bootstrap-tagsinput.css')}}" rel="stylesheet">
    <style>

        .bootstrap-tagsinput .tag {
            margin-right: 2px;
            color: #666666;
        }
    </style>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('backend/vendor/tagsinput/js/bootstrap-tagsinput.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $("tag-input").tagsinput();
        })
    </script>
{% endblock %}