{% extends 'backend_layout.html.twig' %}

{% block title %}Liste des partenaires{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="page-title">
            <h4 class="mb-0"> Gestion des partenaires
                <small></small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="#" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">liste des partenaires</li>
            </ol>
        </div>

        <div class="container-fluid">


            <div class="row mt-5 mb-3">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_partenaire_new') }}" class="btn  btn-light"><i class="fa fa-plus"></i> Ajouter un partenaire</a>
                </div>
                <br>
            </div>

            <div class="card-deck">
                {% for partenaire in partenaires %}
                    <div class="col-md-4 col-sm-6">
                        <div class="card mb-4">
                            <img src="{{ vich_uploader_asset(partenaire, 'imageFile') }}" alt="{{ partenaire.nom }}" title="{{ partenaire.nom }}"  class="card-img-top img-fluid"/>
                            <div class="card-body">
                                <h5 class="card-title">{{ partenaire.nom }}</h5>
                                <a href="{{ path('backend_partenaire_edit', {'slug': partenaire.slug}) }}" class="btn btn-outline-primary">Modifier</a>
                                {% if (partenaire.statut) %}
                                    <a href="#" class="btn btn-success" title="Actif"><i class="fa fa-check-square-o"></i> </a>
                                {% else %}
                                    <a href="#" class="btn btn-danger" title="DesactivÃ©"><i class="fa fa-chain-broken"></i> </a>
                                {% endif %}
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">PubliÃ© le {{ partenaire.publieLe|date('d-m-Y H:i:s') }} par {{ partenaire.publiePar }}</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </main>
{% endblock %}