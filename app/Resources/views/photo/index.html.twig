{% extends 'backend_layout.html.twig' %}

{% block title %}Liste des photos{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="page-title">
            <h4 class="mb-0"> Gestion des photos
                <small></small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="#" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">liste des photos</li>
            </ol>
        </div>

        <div class="container-fluid">


            <div class="row mt-5 mb-3">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_frarticle_index') }}" class="btn  btn-light"><i class="fa fa-plus"></i> Retour aux actulités</a>
                </div>
                <br>
            </div>

            <div class="card-deck">
                {% for gallerie in galleries %}
                    <div class="col-md-4 col-sm-6">
                        <div class="card mb-4" style="height: 500px; overflow-y: auto;">
                            <img src="{{ vich_uploader_asset(gallerie.article, 'imageFile') }}" alt="{{ gallerie.article.titre }}" title="{{ gallerie.article.titre }}"  class="card-img-top img-fluid"/>
                            <div class="card-body">
                                <h5 class="card-title">{{ gallerie.article.titre }}</h5>
                                <p class="card-text">{{ gallerie.article.resume|raw }}</p>
                                <!--<a href="#" class="btn btn-outline-danger">Apperçu</a>-->
                                <a href="{{ path('backend_gallerie_photo',{'article': gallerie.article.id }) }}" class="btn btn-outline-primary">
                                    <i class="fa fa-picture-o"></i> Voir les photos
                                </a>

                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Publié le {{ gallerie.article.publieLe|date('d-m-Y H:i:s') }} par {{ gallerie.article.publiePar }}</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </main>
{% endblock %}