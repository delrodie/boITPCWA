{% extends 'backend_layout.html.twig' %}

{% block title %}Liste des actualités{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="page-title">
            <h4 class="mb-0"> Gestion des actualités
                <small></small>
            </h4>
            <ol class="breadcrumb mb-0 pl-0 pt-1 pb-0">
                <li class="breadcrumb-item"><a href="#" class="default-color">Accueil</a></li>
                <li class="breadcrumb-item active">liste des actualités</li>
            </ol>
        </div>

        <div class="container-fluid">


            <div class="row mt-5 mb-3">
                <div class="col-md-12 text-right">
                    <a href="{{ path('backend_traduction_edit', {'id': traduction.id, 'fr': traduction.francais.id, 'en': traduction.anglais.id}) }}" class="btn  btn-light"><i class="fa fa-edit"></i> Modifier</a>
                </div>
                <br>
            </div>

            <div class="card-group">
                    <div class="col-md-6 col-sm-6">
                        <div class="card mb-4" style="height: 500px; overflow-y: auto;">
                            <img src="{{ vich_uploader_asset(traduction.francais, 'imageFile') }}" alt="{{ traduction.francais.titre }}" title="{{ traduction.francais.titre }}"  class="card-img-top img-fluid"/>
                            <div class="card-body">
                                <h5 class="card-title">{{ traduction.francais.titre }}</h5>
                                <p class="card-text">{{ traduction.francais.resume|raw }}</p>
                                <!--<a href="#" class="btn btn-outline-danger">Apperçu</a>-->
                                <a href="{{ path('backend_frarticle_show', {'slug': traduction.francais.slug}) }}" class="btn btn-outline-primary">> Lire la suite</a>
                                {% if (traduction.francais.statut) %}
                                    <a href="#" class="btn btn-success" title="Actif"><i class="fa fa-check-square-o"></i> </a>
                                {% else %}
                                    <a href="#" class="btn btn-danger" title="Desactivé"><i class="fa fa-chain-broken"></i> </a>
                                {% endif %}
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Publié le {{ traduction.francais.publieLe|date('d-m-Y H:i:s') }} par {{ traduction.francais.publiePar }}</small>
                            </div>
                        </div>
                    </div>
                <div class="col-md-6 col-sm-6">
                    <div class="card mb-4" style="height: 500px; overflow-y: auto;">
                        <img src="{{ vich_uploader_asset(traduction.anglais, 'imageFile') }}" alt="{{ traduction.anglais.titre }}" title="{{ traduction.anglais.titre }}"  class="card-img-top img-fluid"/>
                        <div class="card-body">
                            <h5 class="card-title">{{ traduction.anglais.titre }}</h5>
                            <p class="card-text">{{ traduction.anglais.resume|raw }}</p>
                            <!--<a href="#" class="btn btn-outline-danger">Apperçu</a>-->
                            <a href="{{ path('backend_enarticle_show', {'slug': traduction.anglais.slug}) }}" class="btn btn-outline-primary"> &raquo; read more</a>
                            {% if (traduction.anglais.statut) %}
                                <a href="#" class="btn btn-success" title="Enabled"><i class="fa fa-check-square-o"></i> </a>
                            {% else %}
                                <a href="#" class="btn btn-danger" title="Disenabled"><i class="fa fa-chain-broken"></i> </a>
                            {% endif %}
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Published on {{ traduction.anglais.publieLe|date('d-m-Y H:i:s') }} by {{ traduction.anglais.publiePar }}</small>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
{% endblock %}